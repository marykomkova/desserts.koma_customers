<style>
    .bot {
        margin-bottom: 0px !important;
    }

    .navigation-bar a {
        color: #000 !important;
    }

    .menu:after {
        color: #000 !important;
    }

    .navigation-bar {
        border-bottom: 1px solid rgb(0 0 0 / 20%) !important;
    }

    .dark-bar {
        background-color: #fff0fd !important;
    }

    .overl {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* Прозрачный черный цвет */
        z-index: 999; /* Определяет порядок наложения элементов */
    }
</style>

<script>
    $(document).ready(function () {

        $(window).scroll(function () {
            var scroll = $(window).scrollTop();

            if (scroll >= 400) {
                $(".navbar").addClass("navbar-fixed-top dark-bar");
            } else {
                $(".navbar").removeClass("navbar-fixed-top dark-bar");
            }
        });

        // Menu bar
        $(".menu").click(function () {
            $(this).toggleClass('m c');
            $('#mySidenav').toggleClass("show-menu hide-menu");
            $('#main').append('<div class="overl"></div>');
            document.body.style.overflow = 'hidden';
        });

        $("#mySidenav .closebtn").click(function () {
            $('.menu').toggleClass('c m');
            $('#mySidenav').toggleClass("show-menu hide-menu");
            $('#main .overl').remove();
            document.body.style.overflow = 'auto';
        });

        var showPasswordCheckbox = document.getElementById('showPasswordCheckbox');
        var passwordInput = document.getElementById('password');

        showPasswordCheckbox.addEventListener('change', function () {
            if (showPasswordCheckbox.checked) {
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }
        });

        var showPasswordCheckbox2 = document.getElementById('showPasswordCheckbox2');
        var passwordInput2 = document.getElementById('confirmPassword');

        showPasswordCheckbox2.addEventListener('change', function () {
            if (showPasswordCheckbox2.checked) {
                passwordInput2.type = 'text';
            } else {
                passwordInput2.type = 'password';
            }
        });

        document.getElementById('register_form').addEventListener('submit', function (event) {
            var loginInput = document.getElementById('login');
            var nameInput = document.getElementById('name');
            var passwordInput = document.getElementById('password');
            var confirmPasswordInput = document.getElementById('confirmPassword');

            if (loginInput.value.trim() === '' || nameInput.value.trim() === '' || passwordInput.value.trim() === '' || confirmPasswordInput.value.trim() === '') {
                // Если хотя бы одно поле пустое, отменяем отправку формы
                event.preventDefault();
            }
        });

    });
</script>


<div id="mySidenav" class="sidenav hide-menu">
    <a href="javascript:void(0)" class="closebtn">×</a>
    <a asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
    <a id="desertss" asp-area="" asp-controller="Home" asp-action="Desserts">Десерты</a>
</div>
<div class="main null_shadow" id="main">
    <header class="bg-img header">
        <nav class="navbar navbar-default navbar-vira">
            <div class="container">
                <div class="navigation-bar">
                    <div class="row">
                        <div id="cr" class="col-xs-6">
                            <div class="menu m">
                                <a href="#"><span class="ion-navicon _ion-android-menu"></span></a>
                            </div>
                        </div>
                        <div class="col-xs-6 text-right">
                            <div class="logo">
                                <img src="/icons/black_logo.svg" alt="Логотип">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <div class="intro-box">
                    <div class="intro">
                        <p id="head-title">Регистрация</p>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section class="login_box_area section-margin">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login_box_img">
                        <div class="hover">
                            <h4>Уже есть аккаунт?</h4>
                            <p>Это хороший повод, чтобы заказать что-то вкусное</p>
                            <a class="button button-account" asp-area="" asp-controller="Home" asp-action="Login">Войти сейчас</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login_form_inner register_form_inner">
                        <h3>Создать аккаунт</h3>
                        <form asp-controller="Home" asp-action="Register" method="post" class="row login_form" id="register_form">
                            <div class="col-md-12 form-group">
                                <input asp-for="Логин" class="form-control" id="login" placeholder="Логин">
                                <span asp-validation-for="Логин" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group">
                                <input asp-for="Имя" class="form-control" id="name" placeholder="Имя">
                                <span asp-validation-for="Имя" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group bot">
                                <input type="password" asp-for="Пароль" class="form-control" id="password" placeholder="Пароль">
                                <span asp-validation-for="Пароль" class="text-danger"></span>
                                <div class="col-md-12 form-group">
                                    <div class="creat_account">
                                        <input type="checkbox" id="showPasswordCheckbox" name="RememberMe">
                                        <label for="showPasswordCheckbox">Показать пароль</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 form-group bot">
                                <input type="password" asp-for="ПодтверждениеПароля" class="form-control" id="confirmPassword" placeholder="Подтвердить пароль">
                                <span asp-validation-for="ПодтверждениеПароля" class="text-danger"></span>
                                <div class="col-md-12 form-group">
                                    <div class="creat_account">
                                        <input type="checkbox" id="showPasswordCheckbox2" name="RememberMe">
                                        <label for="showPasswordCheckbox2">Показать пароль</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 form-group bot">
                                <div class="creat_account">
                                    <input type="checkbox" id="rememberMe" name="rememberMe">
                                    <label for="rememberMe">Запомнить меня</label>
                                </div>
                            </div>
                            <div class="col-md-12 form-group">
                                <button type="submit" id="reg" class="button button-register w-100"> Зарегистрироваться</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

